									<option value="">Dollar</option>
									<option value="">Dollar</option>
									<option value="">Dollar</option>
									<option value="">Dollar</option>
								</select>
								<div class="search-form">
									<form action=""><input type="search"><input type="submit"></form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</header>

			{{ content_for_layout}}

