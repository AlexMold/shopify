	{{ content_for_header }}
	
	{{ 'normalize.css' | asset_url | stylesheet_tag }}
	{{ 'main.css' | asset_url | stylesheet_tag }}
	<title>{{ page_title }} - {{ shop.name }}</title>
</head>
<body>

		<div class="main-wrapper">

			<header role="header">
				<div class="top-header">
